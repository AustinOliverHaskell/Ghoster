<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="ghoster.supersimpleedhcounter.Extras">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
   <LinearLayout
       android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:orientation="vertical"
       >

       <Button
           android:layout_height="0dp"
           android:layout_width="match_parent"
           android:text="Flip A Coin"
           android:background="@color/utility"
           android:layout_weight="1"
           android:textColor="@color/text"
           android:textSize="30sp"
           android:id="@+id/flip_a_coin_bttn"
            />


       <LinearLayout
           android:layout_height="0dp"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:orientation="vertical"
           >

           <EditText
               android:layout_height="0dp"
               android:layout_width="match_parent"
               android:layout_weight="2"
               android:cursorVisible="false"
               android:background="@android:color/transparent"
               android:textColor="@color/text"
               android:text="0"
               android:gravity="center"
               android:textSize="30sp"
               android:textAlignment="center"
               android:id="@+id/random_text"
               />
           <Button
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:background="@android:color/transparent"
               android:text="Generate Random"
               android:textColor="@color/text"
               android:textSize="20sp"
               android:id="@+id/generate_random_bttn"
               />

       </LinearLayout>

   </LinearLayout>

</FrameLayout>
